@model IEnumerable<ProTechTiveGear.Models.ItemType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@*<h2  class="text-center">Loại Sản Phẩm</h2>*@

<div class="card-header py-3">
    <h2 class="text-center">Danh sách sản phẩm</h2>

    <p>
        @Html.ActionLink("Thêm mới", "Create", new { @class = "btn btn-success" })
    </p>
</div>

@*<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Loại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Menu.Name)
        </td>

        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "far fa-edit btn btn-outline-success" }) |

            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-outline-success" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "far fa-trash-alt btn btn-outline-success" })
        </td>

        @*<td>
            @Html.ActionLink("Cập Nhập", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
        </td>*@
    </tr>
}

